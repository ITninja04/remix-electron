{
  "name": "remix-electron",
  "version": "0.0.0",
  "author": "itsMapleLeaf",
  "description": "Electron integration for Remix",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "types": "dist/main.d.ts",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsup-node src/main.ts --clean --target node16 --format cjs --dts",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "zod": "^3.11.6"
  },
  "peerDependencies": {
    "@remix-run/dev": ">=1.1.3",
    "@remix-run/node": ">=1.1.3",
    "@remix-run/server-runtime": ">=1.1.3",
    "electron": ">=16",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@remix-run/node": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "electron": "^16.0.7",
    "esbuild": "^0.14.19",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.cache/**",
      "**/.vscode/**"
    ],
    "rules": {
      "import/no-unused-modules": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
