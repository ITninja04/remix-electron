{
  "name": "remix-electron-template",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "main": "desktop/main.js",
  "scripts": {
    "prepare": "remix setup node",
    "clean": "del-cli dist desktop/build public/build .cache desktop/main.js",
    "dev": "npm run clean && npm run build:desktop && cross-env NODE_ENV=development npm-run-all --parallel --print-label --race dev:*",
    "dev:remix": "remix watch",
    "dev:nodemon": "wait-on file:desktop/main.js && nodemon .",
    "build": "npm run clean && npm run build:desktop && remix build && electron-builder",
    "build:desktop": "yarn tsc -p tsconfig.electron-build.json",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "build": {
    "files": [
      "desktop",
      "public",
      "remix.config.js"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "@remix-run/server-runtime": "^1.2.3",
    "fast-glob": "^3.2.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "remix-electron": "latest"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
