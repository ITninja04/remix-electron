{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES5"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES3",
    "strict": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true
  },
  "include": [
    "desktop/main.ts"
  ],
  "exclude": ["desktop/build", "public/build", ".cache"]
}
